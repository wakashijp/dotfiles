# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

[*.html]
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 2

[{*.js,*.jsx,*.json}]
indent_style = space
indent_size = 2

[{package.json,*.yml}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4
trim_final_newline = false

