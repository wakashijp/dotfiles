# .bashrc

# User specific aliases and functions

# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi

## Loading source files configuration
#
# Aliases source file 
if [ -f ~/.bash_aliases ]; then
	. ~/.bash_aliases
fi

# Prompt setting.
export PS1="\[\e[1;31m\][\u@\h \W]\[\e[m\]\\$ "

